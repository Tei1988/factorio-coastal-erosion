{
  "name": "factorio-coastal-erosion",
  "version": "0.0.5",
  "description": "Coastal Erosion Mod for Factorio",
  "scripts": {
    "build": "tstl -p tsconfig.json",
    "format": "prettier '**/*.{json,md,ts,yaml,yml}' --write",
    "check-format": "prettier '**/*.{json,md,ts,yaml,yml}' --check",
    "update-packages": "ncu -u",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "test": "jest --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tei1988/factorio-coastal-erosion.git"
  },
  "keywords": [
    "factorio",
    "factorio-mod"
  ],
  "author": "Tei1988",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Tei1988/factorio-coastal-erosion/issues"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "es5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "homepage": "https://github.com/Tei1988/factorio-coastal-erosion#readme",
  "devDependencies": {
    "@types/factorio": "git+https://github.com/sguest/factorio-types.git",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "npm-check-updates": "^10.2.2",
    "prettier": "^2.2.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2",
    "typescript-to-lua": "^0.36.0"
  }
}
